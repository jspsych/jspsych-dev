{
    "name": "@jspsych/jspsych-dev",
    "private": false,
    "type": "module",
    "workspaces": [
        "packages/*",
        "templates/cli"
    ],
    "scripts": {
        "update-unpkg-links": "gulp updateUnpkgLinks",
        "update-readme": "node ./update-readme.js",
        "prepare": "husky install",
        "changeset": "changeset",
        "changeset:version": "changeset version && npm install && npm run update-unpkg-links && npm run update-readme",
        "changeset:publish": "npm run build && changeset publish"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.1.0",
        "canvas": "^2.11.2",
        "gulp": "^5.0.0",
        "gulp-replace": "^1.1.4",
        "npm-link": "^0.0.4"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.4.0",
        "@changesets/cli": "^2.16.0",
        "@jspsych/config": "^2.0.0",
        "husky": "^7.0.1",
        "import-sort-style-module": "^6.0.0",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "prettier-plugin-import-sort": "^0.0.7"
    },
    "prettier": {
        "printWidth": 100
    },
    "importSort": {
        ".ts, .js, .mjs, .cjs": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "lint-staged": {
        "*.{ts,js,mjs,cjs}": "prettier --write"
    },
    "jest": {
        "projects": [
            "<rootDir>/packages/*"
        ]
    },
    "bin": "./templates/cli/src/index.js"
}
